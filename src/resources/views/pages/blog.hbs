<div class='container mt-4 mb-4'>
    <div class='row'>
        {{#each blogs}}
            <div class='col-12 col-sm-6 col-md-4 col-lg-4 col-xl-3 mt-3'>
                <div class='card'>
                    <img
                        class='card-img-top'
                        src='{{this.image_url}}'
                        alt='Card image cap'
                    />
                    <div class='card-body'>
                        <h5 class='card-title'>
                            {{this.title}}
                        </h5>
                        <p class='card-text text-truncate'>
                            {{this.meta_description}}
                        </p>
                        <a href='#' class='btn btn-primary'>
                            Xem bài viết
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>