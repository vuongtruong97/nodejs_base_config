<div class='container'>
    <h1>
        Khoá học của tôi
    </h1>
    <table class='table'>
        <thead>
            <tr>
                <th scope='col'>
                    #
                </th>
                <th scope='col'>
                    Tên khoá học
                </th>
                <th scope='col'>
                    Mô tả khoá học
                </th>
                <th scope='col'>
                    Thời gian tạo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope='row'>
                        {{sum @index 1}}
                    </th>
                    <td>
                        {{capitalize this.title}}
                    </td>
                    <td>
                        {{this.slug}}
                    </td>
                    <td>
                        {{this.published_at}}
                    </td>
                    <td>
                        <a
                            href='/courses/{{this._id}}/edit'
                            class='btn btn-success'
                        >
                            Sửa
                        </a>
                        <a href='' class='btn btn-danger'>
                            Xoá
                        </a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>