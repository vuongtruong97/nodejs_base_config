<div class='container mt-5 mb-5'>
    <h2>
        Sửa video
    </h2>
    <div class='row'>
        <div class='col-12'>
            <form method='POST' action='/videos/{{video._id}}?_method=PUT'>
                <div class='form-group'>
                    <label for='title'>
                        Tên video
                    </label>
                    <input
                        type='text'
                        class='form-control'
                        placeholder=' Tên video'
                        value='{{video.name}}'
                        id='title'
                        name='name'
                        required
                    />
                </div>
                <div class='form-group'>
                    <label for='description'>
                        Mô tả video
                    </label>
                    <textarea
                        class='form-control'
                        id='description'
                        name='description'
                        required
                    >{{video.description}}
                    </textarea>
                </div>
                <div class='form-group'>
                    <label for='video'>
                        Video Youtube Id
                    </label>
                    <input
                        type='text'
                        class='form-control'
                        placeholder='Video Youtube Id'
                        value='{{video.videoId}}'
                        id='video'
                        name='videoId'
                        required
                    />
                </div>
                <button type='submit' class='btn btn-primary'>
                    Lưu video
                </button>
            </form>
        </div>
    </div>
</div>